<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %> - PDF Tool
  </title>
  <link rel="stylesheet" href="/assets/css/toolPageLayout.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <script src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/signature_pad/4.0.0/signature_pad.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>

</head>

<body>
  <%- include("./components/header.ejs") %>
  <div id="alert-container"></div>

    <div class="container">
      <header class="text-center mb-4">
        <h1><b>
            <%= title %> PDF Tool
          </b></h1>
        <p class="text-muted">
          <%= description %>
        </p>
      </header>


      <!-- Upload Form Section (Dynamic Based on Tool) -->
      <%- include('./components/uploadSection', { tool: tool }) %>
    </div>
    <div>
      <!-- Steps to Use the Tool -->
      <div class="info row g-4 my-5 mb-5  bg-light ">
        <h2 class="text-center mb-4"><b>How to <%= title %> PDF Files</b></h2>
        <% steps.forEach((step, index)=> { %>
          <!-- Step <%= index + 1 %> -->
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card step-card">
              <div class="card-body text-center">
                <h2 class="step-number">
                  <%= index + 1 %>
                </h2>
                <p>
                  <%= step %>
                </p>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>

    <div class="container">
      <!-- Features of the Tool -->
      <div class="row text-center">
        <h2 class="margin text-center mb-5"><b>Try our <%= title %> PDFTools tool</b></h2>
        <% features.forEach((feature)=> { %>
          <div class="col-md-4 my-4">
            <i class="fas <%= feature.icon %> fa-3x mb-3"></i>
            <h5>
              <%= feature.title %>
            </h5>
            <p>
              <%= feature.description %>
            </p>
          </div>
          <% }); %>
      </div>
    </div>

    <%- include("./components/footer.ejs") %>
    

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
      <% if (page === 'merge') { %>
        <script src="/assets/js/merge.js"></script>
    <% } else if (page === 'split') { %>
        <script src="/assets/js/split.js"></script>
    <% } else if (page === 'compress-pdf') { %>
    <script src="/assets/js/compress.js"></script>
    <% } else if (page === 'rotate-pdf') { %>
      <script src="/assets/js/rotate.js"></script>
      <% } else if (page === 'images-to-pdf') { %>
          <script src="/assets/js/imageToPdf.js"></script>
          <% }  else if (page === 'word-to-pdf') { %>
            <script src="/assets/js/wordToPdf.js"></script>
            <% } else if (page === 'powerpoint-to-pdf') { %>
              <script src="/assets/js/pptToPdf.js"></script>
              <% } else if (page === 'excel-to-pdf') { %>
                <script src="/assets/js/excelToPdf.js"></script>
                <% } else if (page === 'html-to-pdf') { %>
                  <script src="/assets/js/htmlToPdf.js"></script>
                  <% } else if (page === 'text-to-pdf') { %>
                    <script src="/assets/js/textToPdf.js"></script>
                    <% } else if (page === 'pdf-to-images') { %>
                      <script src="/assets/js/pdfToImages.js"></script>
                      <% } else if (page === 'add-watermark-pdf') { %>
                        <script src="/assets/js/watermark.js"></script>
                        <% } else if (page === 'remove-pages-pdf') { %>
                          <script src="/assets/js/removePages.js"></script>
                          <% } else if (page === 'extract-pages-pdf') { %>
                            <script src="/assets/js/extractPages.js"></script>
                            <% } else if (page === 'pdf-page-numbering') { %>
                              <script src="/assets/js/pageNumber.js"></script>
                              <% } else if (page === 'organize-pdf') { %>
                                <script src="/assets/js/pdfOrganizer.js"></script>
                                <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
                                <% } else if (page === 'pdf-to-word') { %>
                                  <script src="/assets/js/pdfToWord.js"></script>
                                  <% } else if (page === 'pdf-to-text') { %>
                                    <script src="/assets/js/pdfToText.js"></script>
                                    <% } else if (page === 'pdf-to-excel') { %>
                                      <script src="/assets/js/pdfToExcel.js"></script>
                                      <% } else if (page === 'pdf-to-powerpoint') { %>
                                        <script src="/assets/js/pdfToPpt.js"></script>
                                        <% } else if (page === 'protect-pdf') { %>
                                          <script src="/assets/js/pdfLock.js"></script>
                                          <% } else if (page === 'unlock-pdf') { %>
                                            <script src="/assets/js/pdfUnlock.js"></script>
                                            <% } else if (page === 'pdf-sign') { %>
                                              <script src="/assets/js/pdfSign.js"></script>
                                              <% } else if (page === 'pdf-ocr') { %>
                                                <script src="/assets/js/ocr.js"></script>
                                                <% } %>

      <script src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>




</body>

</html>