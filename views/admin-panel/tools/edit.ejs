<form method="POST" action="">
    <input type="text" name="name" value="<%= tool ? tool.name : '' %>" placeholder="Tool Name" required>
    <input type="text" name="id" value="<%= tool ? tool.id : '' %>" placeholder="ID" required>
    <input type="text" name="icon" value="<%= tool ? tool.icon : '' %>" placeholder="FontAwesome Icon">
    <input type="text" name="color" value="<%= tool ? tool.color : '' %>" placeholder="Color Class">
    <textarea name="description"><%= tool ? tool.description : '' %></textarea>
    <input type="text" name="link" value="<%= tool ? tool.link : '' %>" placeholder="Tool Link">
    <input type="text" name="category" value="<%= tool ? tool.category : '' %>" placeholder="Category">
    <button type="submit">Save</button>
  </form>
  