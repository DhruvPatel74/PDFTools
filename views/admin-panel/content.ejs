<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tools Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .content-area {
      margin-left: 250px;
      width: calc(100% - 250px);
      background-color: #ffffff;
      min-height: 100vh;
      padding: 20px;
    }

    .table td, .table th {
      vertical-align: middle;
    }

    .btn-sm {
      font-size: 0.8rem;
    }
  </style>
</head>
<body>
  <%- include('../admin-panel/component/header.ejs') %>
  <%- include('../admin-panel/component/sidebar.ejs') %>

  <div class="content-area">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="mb-0">All Tools</h4>
      <a href="/admin/tools/add" class="btn btn-primary btn-sm">+ Add Tool</a>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Form ID</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (tools.length > 0) { %>
            <% tools.forEach(tool => { %>
              <tr>
                <td><%= tool.name %></td>
                <td><%= tool.title %></td>
                <td><%= tool.description %></td>
                <td><%= tool.formId %></td>
                <td>
                  <a href="/admin/tools/edit/<%= tool._id %>" class="btn btn-warning btn-sm me-2">Edit</a>
                  <a href="/admin/tools/delete/<%= tool._id %>" class="btn btn-danger btn-sm"
                     onclick="return confirm('Are you sure you want to delete this tool?');">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center text-muted">No tools available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
